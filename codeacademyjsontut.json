var Mary = '{ "height":1.9, "age":36, "eyeColor":"brown"}';

// 1. use JSON.parse() to create an object 'objectMary':
var objectMary = JSON.parse(Mary);
alert(objectMary.age);

// 2. Using Stringify to serialize object
var MaryTwo = new Object();
MaryTwo.height = 1.9;
MaryTwo.age = 36;
MaryTwo.eyecolor = "brown";

console.log(JSON.stringify(MaryTwo));

// 3. Simulating Associative Arrays
var conference = {
	"startDay" : "Monday",
	"nextDay" : "Tuesday",
	"endDay" : "Wednesday"
};
console.log(conference['endDay']);

